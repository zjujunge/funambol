<Script>
  <BeginTest>
    <Arg>syncfiles106</Arg>
    <Arg>syncfiles106</Arg>
    <Arg>file</Arg>
    <Arg>*</Arg>
    <Arg>e2e</Arg>
  </BeginTest>

  <!-- 
  
    Scenario:
      Add a txt file to the MediaHub folder. Sync.
      Rename and then update the file. Sync.

    Expected:
      The file has been correctly renamed on the portal, 
      and the file content has been updated too.

  -->

  <Include><Arg>../util/deleteall.xml</Arg></Include>
  <AddMedia>
    <Arg>Files</Arg>
    <Arg>../data/rename01.txt</Arg>
  </AddMedia>
  <Include><Arg>../util/firesync.xml</Arg></Include>
  <WaitForSyncToComplete>
    <Arg>5</Arg>
    <Arg>120</Arg>
  </WaitForSyncToComplete>
  <CheckExchangedData>
    <Arg>Files</Arg>
    <Arg>1</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
  </CheckExchangedData>
  <CheckMediaCount>
    <Arg>Files</Arg>
    <Arg>1</Arg>
  </CheckMediaCount>
  <CheckMediaCountOnServer>
    <Arg>Files</Arg>
    <Arg>1</Arg>
  </CheckMediaCountOnServer>

  <!-- rename the file -->
  <RenameMedia>
    <Arg>Files</Arg>
    <Arg>rename01.txt</Arg>
    <Arg>renamed.txt</Arg>
  </RenameMedia>
  <OverrideMediaContent>
    <Arg>Files</Arg>
    <Arg>renamed.txt</Arg>
    <Arg>../data/file02</Arg>
  </OverrideMediaContent>
  
  <!-- Check that the rename info is persisted -->
  <CloseMainApp/>
  <StartMainApp/>
  
  <Include><Arg>../util/firesync.xml</Arg></Include>
  <WaitForSyncToComplete>
    <Arg>5</Arg>
    <Arg>120</Arg>
  </WaitForSyncToComplete>
  <CheckExchangedData>
    <Arg>Files</Arg>
    <Arg>1</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
  </CheckExchangedData>
  <CheckMediaCount>
    <Arg>Files</Arg>
    <Arg>1</Arg>
  </CheckMediaCount>
  <CheckMediaCountOnServer>
    <Arg>Files</Arg>
    <Arg>2</Arg>
  </CheckMediaCountOnServer>
  
  <!-- Check file integrity -->
  <CheckMediaContentIntegrity>
    <Arg>Files</Arg>
    <Arg>renamed.txt</Arg>
  </CheckMediaContentIntegrity>

  <EndTest/>
</Script>
