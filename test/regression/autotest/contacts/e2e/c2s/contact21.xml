<!-- 
  SyncContacts21
  -On Device add multiple records, modify multiple records and delete multiple records in Contacts section / Sync
-->

<Script>
  <BeginTest>
    <Arg>contact21</Arg>
    <Arg>contact21</Arg>
    <Arg>contact</Arg>
    <Arg>c2s</Arg>
    <Arg>e2e</Arg>
  </BeginTest>

  <!-- This include create new multiple records of Contacts (Giuseppe Rossi, Mario Bianchi, Luca Bianchi, Pallino Pinko) and do a fast sync -->
  <Include><Arg>addfourrecords.xml</Arg></Include>

  <!-- Create on Device side a new Contact (Mario Rossi); -->
  <CreateEmptyContact/>
  <SetContactField>
    <Arg>FirstName</Arg>
    <Arg>Mario</Arg>
  </SetContactField>
  <SetContactField>
    <Arg>LastName</Arg>
    <Arg>Rossi</Arg>
  </SetContactField>
  <SaveContact/>

  <CreateEmptyContact/>
  <SetContactField>
    <Arg>FirstName</Arg>
    <Arg>Carlo</Arg>
  </SetContactField>
  <SetContactField>
    <Arg>LastName</Arg>
    <Arg>Arancio</Arg>
  </SetContactField>
  <SaveContact/>

  <!-- Load a Contact on Device side and modify some fields of this -->
  <LoadContact>
    <Arg>Giuseppe</Arg>
    <Arg>Rossi</Arg>
  </LoadContact>
  <SetContactField>
    <Arg>Website</Arg>
    <Arg>www.giusepperossi.it</Arg>
  </SetContactField>
  <SaveContact/>

  <!-- Load a Contact on Device side and modify some fields of this -->
  <LoadContact>
    <Arg>Mario</Arg>
    <Arg>Bianchi</Arg>
  </LoadContact>
  <SetContactField>
    <Arg>Website</Arg>
    <Arg>www.mariobianchi.it</Arg>
  </SetContactField>
  <SaveContact/>

  <!-- Delete Contacts On Server Side -->
  <DeleteContact>
    <Arg>Luca</Arg>
    <Arg>Bianchi</Arg>
  </DeleteContact>
  <DeleteContact>
    <Arg>Pallino</Arg>
    <Arg>Pinko</Arg>
  </DeleteContact>

  <!-- Fire the synchronization and wait that is complete -->
  <KeyPress><Arg>KeyFire</Arg></KeyPress>
  <WaitForSyncToComplete>
    <Arg>5</Arg>
    <Arg>200</Arg>
  </WaitForSyncToComplete>

  <!-- Verify an Exchanged Data [format: (add_client,updated_client,deleted_client,add_server,updated_server,deleted_server)] -->
  <CheckExchangedData>
    <Arg>Contacts</Arg>
    <Arg>2</Arg>
    <Arg>2</Arg>
    <Arg>2</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
  </CheckExchangedData>  

  <EndTest/>
</Script>
