<!--
  SyncContacts12
  On Device delete a record from the Contacts section / Sync
-->

<Script>
  <BeginTest>
    <Arg>contact12</Arg>
    <Arg>contact12</Arg>
    <Arg>contact</Arg>
    <Arg>c2s</Arg>
    <Arg>e2e</Arg>
  </BeginTest>

  <!-- This include create a new Contact (Luca Bianchi) and do a fast sync -->
  <Include><Arg>addonerecord.xml</Arg></Include>

  <!-- Delete Contact On Device Side -->
  <DeleteContact>
    <Arg>Luca</Arg>
    <Arg>Bianchi</Arg>
  </DeleteContact>

  <!-- Fire the synchronization and wait that is complete -->
  <KeyPress><Arg>KeyFire</Arg></KeyPress>
  <WaitForSyncToComplete>
    <Arg>5</Arg>
    <Arg>120</Arg>
  </WaitForSyncToComplete>

  <!-- Verify an Exchanged Data [format: (add_client,updated_client,deleted_client,add_server,updated_server,deleted_server)] -->
  <CheckExchangedData>
    <Arg>Contacts</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
    <Arg>1</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
    <Arg>0</Arg>
  </CheckExchangedData>

  <EndTest/>
</Script>
